<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DocKt"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocKt">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activity.UserMenuActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocKt">
        </activity>
        <activity
            android:name=".View.Activity.PerfilActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocKt">
        </activity>
        <activity
            android:name=".View.Activity.SharedDocsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocKt">
        </activity>
        <activity
            android:name=".View.Activity.EditDocActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.DocKt">
        </activity>
    </application>

</manifest>